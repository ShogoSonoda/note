<div class="container">
  <div class="row">
    <%= render 'shared/error_messages', model: @post %>
  </div>
  <div class="row">
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="">
        <label class="form-label">タイトル</label>
        <%= form.text_field :title, placeholder: "タイトルを入力して下さい", class: "form-control" %>
      </div>
      <div class="">
        <label class="form-label">テキスト</label>
        <%= form.text_area :text, placeholder: "テキストを入力して下さい", class: "form-control", size: "20x10" %>
      </div>
      <div class="">
        <%= form.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>