<h2><%= post.title %></h2>
<h3>投稿者：<%= post.user.nickname %></h3>
<p><%= post.text %></p>
<ul>
  <li>
    <%= link_to '詳細', post_path(post.id), method: :get %>
  </li>
  <% if post.liked_by?(current_user) %>
    <p><span>いいね解除: </span><%= link_to post.likes.count, post_likes_path(post.id), method: :delete %></p>
  <% else %>
    <p><span>いいね登録: </span><%= link_to post.likes.count, post_likes_path(post.id), method: :post %></p>
  <% end %>

  <% if current_user != post.user %>
    <% if post.user.followed_by?(current_user) %>
      <p><%= link_to "フォロー済み", user_relationships_path(post.user.id), method: :delete %></p>
    <% else %>
      <p><%= link_to "フォローする", user_relationships_path(post.user.id), method: :post %></p>
    <% end %>
  <% end %>

  <% if user_signed_in? && current_user.id == post.user_id %>
    <li>
      <%= link_to '編集', edit_post_path(post.id), method: :get %>
    </li>
    <li>
      <%= link_to '削除', post_path(post.id), method: :delete %>
    </li>
  <% end %>
</ul>